@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Finacial Calculator</h2>
        <p>
            <img width="300" src="~/Images/calculator.jpg" />
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Calculator","Home")">Get Estimate &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Book a Test Drive</h2>
        <p>
            <img width="300" src="~/Images/1.jpg" />
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Create","TestDrives")">Book Now &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Service Booking</h2>
        <p>
            <img width="300" src="~/Images/service.jpg" />
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Create","Bookings")">Book Now &raquo;</a></p>
    </div>
</div>