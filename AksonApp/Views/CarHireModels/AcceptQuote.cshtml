@model AksonApp.Models.CarHireModel

@{
    ViewBag.Title = "AcceptQuote";
    Layout = null;
}
<div class="modal-body">
    <h2>Accept Quote</h2>

    <h3>Are you sure you want to acceept this Quote?</h3>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Accept Quote" class="btn btn-success" /> |
                <button class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        }
    </div>
</div>