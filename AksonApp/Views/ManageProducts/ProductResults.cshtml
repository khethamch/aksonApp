@model IEnumerable<AksonApp.Models.Products>

@{
    ViewBag.Title = "ProductResults";
    int count = Model.Count();
}
<div class="alert alert-info">
    <h2 style="text-align:center">Our Spares</h2>
</div>
<table class="table">
    @foreach (var item in Model)
    {
        using (Html.BeginForm("ProductResults", "ManageProducts", FormMethod.Post))
        {
            <input type="hidden" name="itemid" value="@item.Id" />
         
            <tr class="col-sm-3" style="text-align:center">
                <td>

                    <img src="~/Products/@item.ProductImage" style="max-width:100%;width:200px;height:200px" /><br />
                    <b>@item.ProductName</b> :  <b style="color:#233a77">@item.ProductPrice.ToString("c")</b><br />
                    <b style="font-size:10px">@item.ProductDescription</b><br />

                    @if (item.ProductRating == 1)
                    {
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span class="fa fa-star-o"></span>
                        <span class="fa fa-star-o"></span>
                        <span class="fa fa-star-o"></span>
                        <span class="fa fa-star-o"></span>
                    }
                    @if (item.ProductRating == 2)
                    {
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span class="fa fa-star-o"></span>
                        <span class="fa fa-star-o"></span>
                        <span class="fa fa-star-o"></span>
                    }
                    @if (item.ProductRating == 3)
                    {
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span class="fa fa-star-o"></span>
                        <span class="fa fa-star-o"></span>
                    }
                    @if (item.ProductRating == 4)
                    {
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span class="fa fa-star-o"></span>
                    }
                    @if (item.ProductRating == 5)
                    {
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                        <span style="color:#233a77" class="fa fa-star"></span>
                    }<br />
                    <b style="color:indianred"> Avaliable Stock : @item.StockRemaining</b>
                    <br />
                    @if (User.Identity.IsAuthenticated)
                    {
                        <button type="submit" class="btn btn-success btn-block">Add to Cart <span class="fa fa-shopping-cart"></span></button>
                    }
                    else
                    {
                        <a href="#" class="btn btn-success btn-block" data-toggle="modal" data-target=".bd-example-modal-sm">Add to Cart <span class="fa fa-shopping-cart"></span></a>
                    }
                </td>
            </tr>
        }


    }

</table>

<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">

                <button class="close" style="color:darkred" data-dismiss="modal">&times;</button>
                <h3><b>Aksons Spares</b></h3>
                <p>
                    <b>
                        Login to begin shopping.
                    </b>
                </p>
            </div>

        </div>
    </div>
</div>