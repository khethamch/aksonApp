@model IEnumerable<AksonApp.Models.MyCart>
@using AksonApp.Models

@{
    ViewBag.Title = "MyCart";
    ApplicationDbContext db = new ApplicationDbContext();
    
}
<h2>My Cart Summary</h2>

<p>
    @if (Model.Count() > 0)
    {
        <a href="@Url.Action("ProductResults","ManageProducts")" class="btn btn-success">Continue Shopping <span class="fa fa-shopping-cart"></span></a><text>&nbsp; &nbsp;</text><a data-modal="" href="@Url.Action("Clear","MyCarts")" class="btn btn-danger">Clear Cart</a><text>&nbsp;&nbsp;</text><a href="@Url.Action("Create","OrderModels")" class="btn btn-primary">Checkout</a>
    }
    else
    {
        <a href="@Url.Action("ProductResults","ManageProducts")" class="btn btn-success">Start Shopping <span class="fa fa-shopping-cart"></span></a><text>&nbsp; &nbsp;</text><button disabled class="btn btn-danger">Clear Cart</button><text>&nbsp;&nbsp;</text><button class="btn btn-primary" disabled>Checkout</button>
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th colspan="2"></th>
    </tr>
    @if (Model.Count() > 0)
    {
        
        foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Products/@item.Image" width="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @{
                        int QuantityProd = db.Products.Where(m => m.Id == item.productId).Select(m => m.StockRemaining).FirstOrDefault();
                    }
                    @if (item.Quantity >= QuantityProd)
                    {
                        <a title="Remove one item." class="btn btn-warning" href="@Url.Action("Minus","MyCarts",new { id = item.Id})"><span class="fa fa-minus"></span></a><text>&nbsp;&nbsp;</text><button disabled title="Stock is finished." class="btn btn-success" ><span class="fa fa-plus"></span></button>
                    }
                    else
                    {
                        <a title="Remove one item." class="btn btn-warning" href="@Url.Action("Minus","MyCarts",new { id = item.Id})"><span class="fa fa-minus"></span></a><text>&nbsp;&nbsp;</text><a title="Add one item." class="btn btn-success" href="@Url.Action("Plus","MyCarts",new { id = item.Id})"><span class="fa fa-plus"></span></a>
                    }

                </td>
                <td>
                    <b>
                        <a class="btn btn-danger" data-modal="" title="Remove all Items." href="@Url.Action("Delete","MyCarts" ,new { cartId = item.Id })"><span class="fa fa-trash"></span></a>
                    </b>
                </td>
            </tr>
        }
        <tr>
            <th colspan="6">
                <br /><br />
            </th>
        </tr>
        <tr>
            <td>
                <b>Total:</b>
            </td>
            <td></td>
            <td>
                <b>@Model.Sum(m => m.Quantity)</b>
            </td>
            <td>
                <b>@Model.Sum(m => m.Price).ToString("c")</b>
            </td>

            <td colspan="2"></td>
        </tr>
    }

    else
    {
        <tr>
            <td colspan="5" style="text-align:center">
                <br /><br /> <br />

                <h1 style="color:lightgray;font-size:52px"> Your shopping cart is empty.</h1>
                <br />
                <a href="@Url.Action("ProductResults","ManageProducts")" class="btn btn-success">Start Shopping <span class="fa fa-shopping-cart"></span></a>
                <br />
            </td>


        </tr>
    }
</table>
<p>
    @if (Model.Count() > 0)
    {
        <a href="@Url.Action("Create","OrderModels")" class="btn btn-primary">Checkout</a>
    }
    else
    {
        <button class="btn btn-primary" disabled>Checkout</button>
    }

</p>
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>